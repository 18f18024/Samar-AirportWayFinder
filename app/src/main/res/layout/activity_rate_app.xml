<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".RateApp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:id="@+id/imgRate"
        app:srcCompat="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Application"
        android:fontFamily="@font/bigshot_one"
        android:textStyle="bold"
        android:textSize="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/writing"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/writing"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/rateCount"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Write Review..."
        android:textColor="@color/black"
        android:id="@+id/review"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceMedium"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/submitBtn"
        android:background="@color/writing"
        android:text="Submit"
        android:textSize="28dp"
        android:fontFamily="@font/bigshot_one"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/showRating"
        android:textColor="@color/writing"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

</LinearLayout>